page {
  height: 100%;
  width: 100%;
  background: white;
}


.pj_box{
  margin-top:20px;
  padding:0 15px;
  font-size: 20px;
  background-color:white;
}

.top {
  width: 100%;
  height: 180px;
  background: #23EBB9;
  padding-top: 60px;
  position: relative;
}

.center_top {
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 80px;
  margin: 100px;
  margin-top: 40rpx;
  position: center;
} 

.center_img {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  overflow: hidden;
}

.center_img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}