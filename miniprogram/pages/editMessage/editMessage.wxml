<view class="page centerPage-wrap" id="userCenterPage" data-router="userCenterPage">
  <view class="centerPage-user-info">
    <view class="js-change-cover">
      <image class="cover-thumb" src="{{ imgUrl }}"></image>
      <label class="ico-moon icon-rightarrow"></label>
    </view>
  </view>
  <view class="centerPage-user-info">
    <view class="centerPage-info-item">
      <label>昵称</label>
      <label class="ico-moon icon-rightarrow"></label>
      <input class="nickname" placeholder="请输入您的昵称" value="{{ uname }}" bindinput="inputNickname" />
    </view>
    <view class="centerPage-info-item">
      <label>学号</label>
      <label class="ico-moon icon-rightarrow"></label>
      <input class="nickname" placeholder="请输入您的学号" value="{{ sid }}" 
      bindinput="inputsid" />
    </view>
    <view class="centerPage-info-item">
      <label>地址</label>
      <label class="ico-moon icon-rightarrow"></label>
      <input class="nickname" placeholder="请输入您的地址" value="{{ address }}" bindinput="inputaddress" />
    </view>
    <view class="centerPage-info-item">
      <label>电话</label>
      <label class="ico-moon icon-rightarrow"></label>
      <input class="nickname" placeholder="请输入您的电话" value="{{ phone_number }}" bindinput="inputphone" />
    </view>
