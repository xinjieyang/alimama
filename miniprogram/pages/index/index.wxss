
.content{
  width: 100%;
  margin: 0 auto;
}
.slide{
  background-color: #ccc;
}
.slide image{
  display: block;
  width: 100%;
  height: 180px;
}

.portals{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  background-color: gainsboro;
  
}
.portals .navList{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
  height: 150rpx;
  border-radius: 15rpx;
  background-color: white;
  margin-bottom: 10px;
}
.portals .navList .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 180rpx;
  height: 150rpx;
  border: 1rpx solid #ccc;
   font-size: 30rpx;
 
  color: #666;
}
.portals .navList .item .ctrl{
  display: flex;
  flex-direction: column;
}
.portals .navList .item image{
  width: 50px;
  height: 50px;
}
.portals .title{
  width: 220rpx;
  height: 50rpx;
  border: 1px solid red;
  margin: 0px auto;
  text-align: center;
  font-size: 35rpx;
  color: red;
  border-radius: 10px;
}
 .portals .list{
   display: flex;
   flex-wrap: wrap;
   align-items: center;
   align-content: center;
    margin-top: 10px;
   border: 1rpx solid #666;
  
 }

.list .item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 350rpx;
  background-color:white;
  border-top: 1rpx solid #ddd;
  border-right: 1rpx solid #ddd;
}
.list .item text{
  color: red;
}
.list .item .name{
  color: grey;
  font-size: 25rpx;
}
.list .item image{
  
  width: 250rpx;
  height: 250rpx;
 

}

.search {
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
}

.search .input {
  width: 700rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.search_row {
  /* border: 1px solid black; */
  height: 86rpx;
  line-height: 86rpx;
  background-color: white;
  border-bottom: 1px solid #fafafa;
}

.search_row_left {
  /* border: 1px solid #757575; */
  float: left;
  height: 86rpx;
  font-weight: 550;
  line-height: 86rpx;
  margin-left: 35rpx;
  font-size: 26rpx;
  letter-spacing: 1rpx;
}

.search_row_right {
  /* border: 1px solid #757575; */
  float: right;
  height: 40rpx;
  width: 40rpx;
  font-weight: 550;
  line-height: 86rpx;
  margin-top: 28rpx;
  margin-right: 10rpx;
}

.search_column {
  /* border: 1px solid black; */
  height: 200rpx;
  display: flex;
  /* margin-right: 55rpx; */
  justify-content: center;
  align-items: center;
}

.search_column_item {
  width: 30%;
  height: 200rpx;
  background: #fff;
  text-align: center;
  position: relative;
}

.search_column_item_badge {
  height: 28rpx;
  width: 28rpx;
  position: absolute;
  background: #b4282d;
  color: #fff;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 40rpx;
}

.search_column_item_image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 30rpx;
}

.search_column_item_text {
  /* border: 1px solid black; */
  margin-top: 5rpx;
  font-size: 30rpx;
  color: #555;
}